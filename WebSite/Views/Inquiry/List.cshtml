@model List<Inquiry>

@{
    ViewData["Title"] = "Pedidos de Contacto";
}

<div class="container mt-5">
    <div class="text-center">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="row mt-4">
        <div class="col">
            @if (Model.Count > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Pessoa de contacto</th>
                            <th>Mensagem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var inquiry in Model)
                        {
                            <tr>
                                <td>@inquiry.Date.ToString("dd/MM/yyyy HH:mm")</td>
                                <td><b>@inquiry.Name</b><br /><i>@inquiry.Email</i></td>
                                <td>@inquiry.Message</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center">Nenhum pedido de contacto encontrado.</p>
            }
        </div>
    </div>
</div>
