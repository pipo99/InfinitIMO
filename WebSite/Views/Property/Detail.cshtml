@model Property

@{
    ViewData["Title"] = Model.Name;
}
 
<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<br />

<div class="property-details">
    <div style="display: flex; align-items: center;">
        <div style="flex: 1;">
            <img src="https://picsum.photos/seed/@Guid.NewGuid()/340/280" style="display: block; margin: 0;" />
        </div>
        <div style="margin-left: 20px; display: flex; text-align: right; flex-direction: column; justify-content: space-between;">
            <form method="post" action="/Inquiry/Create">
                <input type="hidden" name="PropertyID" value="@Model.Id" />
                <input type="text" name="Name" placeholder="Seu nome" style="width: 60%; margin-bottom: 10px;" />
                <input type="text" name="Email" placeholder="Seu e-mail" style="width: 60%; margin-bottom: 10px;" />
                <textarea placeholder="Mensagem" name="Message" rows="6" style="width: 60%;"></textarea>
                <button type="submit" style="margin-top: 10px; width: 60%; margin-left: auto;">Pedir mais informações</button>
            </form>
        </div>
    </div>

    <div style="margin-top: 20px;">
        <p><strong>Preço:</strong> @Model.Price €</p>
        <p><strong>Tipo:</strong> @Model.Type</p>
        <p><strong>Localização:</strong> @Model.Location</p>
        <p><strong>Descrição:</strong> @Model.Description</p>
    </div>
</div>
  